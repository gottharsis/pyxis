{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"plugins": ["prettier"],
	"extends": ["plugin:prettier/recommended", "eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"prettier/prettier": "error",
		"indent": ["error", "tab"],
		"no-console": ["allow"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "never"]
	}
}
